    <!--        android:backgroundTint="#2e8ec9"-->
    <!--        app:layout_constraintBottom_toBottomOf="parent"-->
    <!--        tools:layout_editor_absoluteX="140dp" />-->

    <Button
        android:id="@+id/btn1"
        android:layout_width="60dp"
        android:layout_height="65dp"
        android:layout_marginStart="12dp"
        android:backgroundTint="#2e8ec9"
        app:layout_constraintBottom_toBottomOf="@+id/te2"
        app:layout_constraintEnd_toStartOf="@+id/btn3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/te2"
        app:layout_constraintTop_toBottomOf="@+id/te1"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="39dp"
        android:layout_height="44dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn1"
        app:layout_constraintEnd_toEndOf="@+id/btn1"
        app:layout_constraintStart_toStartOf="@+id/btn1"
        app:layout_constraintTop_toTopOf="@+id/btn1"
        app:layout_constraintVertical_bias="0.551"
        app:srcCompat="@drawable/call" />


    <Button
        android:id="@+id/btn3"
        android:layout_width="60dp"
        android:layout_height="65dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="#d12a51"
        app:layout_constraintBottom_toBottomOf="@+id/te2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/te1"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/te3"
        android:layout_width="211dp"
        android:layout_height="56dp"
        android:text="mail"
        android:textAlignment="center"
        android:textSize="20sp"

        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.027"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/te2"
        app:layout_constraintVertical_bias="0.146" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="60dp"
        android:layout_height="65dp"
        android:backgroundTint="#2e8ec9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toEndOf="@+id/te3"
        app:layout_constraintTop_toBottomOf="@+id/btn1"
        app:layout_constraintVertical_bias="0.125" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="44dp"
        android:layout_height="36dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn2"
        app:layout_constraintEnd_toEndOf="@+id/btn2"
        app:layout_constraintStart_toStartOf="@+id/btn2"
        app:layout_constraintTop_toTopOf="@+id/btn2"
